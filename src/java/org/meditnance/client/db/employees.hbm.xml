<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.meditnance.client.db">
  <class name="org.meditnance.client.db.Employee" table="employees"/>
  <id name="id" column="id" type="integer" unsaved-value="null" />
  <property name="birthDate" column="birth_date" type="date" />
  <property name="role" type="integer" column="role" />
  
  <property name="firstName" type="string" column="first_name" />
  <property name="lastName" type="string" column="last_name" />
  <property name="address" type="string" column="address" />
  <property name="specialization" type="string" column="specialization" />
</hibernate-mapping>
