<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.meditnance.client.db.Intervention" table="interventions"/>
  <id name="id" column="id" type="integer" />

  <property name="idEmployee" column="id_employee" type="integer" index="id_employee" />
  <property name="idClient" column="id_client" type="integer" index="id_client" />
  <property name="cost" column="cost" type="integer" />
  <property name="nature" column="nature" type="integer" />
  <property name="begin" column="intervention_begin" type="time" />
  <property name="end" column="intervention_end" type="time" />
  <property name="date" column="date_intervention" type="date" />
  <property name="annotations" column="annotations" type="string" />

  <many-to-one class="Client" name="client" column="client_id" foreign-key="intervention_ibfk_2" />
  <many-to-one class="Employee" name="employee" column="employee_id" foreign-key="intervention_ibfk_1" />
</hibernate-mapping>
